server {
        listen 80;
        listen [::]:80;
        server_name webhooks.shelex.dev;
}

server {
        listen 443 ssl;
        listen [::]:443 ssl;
        server_name webhooks.shelex.dev;

        ssl_certificate /etc/letsencrypt/live/www.webhooks.shelex.dev/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/www.webhooks.shelex.dev/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
        add_header Strict-Transport-Security "max-age=31536000" always; # managed by Certbot
        ssl_trusted_certificate /etc/letsencrypt/live/www.webhooks.shelex.dev/chain.pem; # managed by Certbot
        ssl_stapling on; # managed by Certbot
        ssl_stapling_verify on; # managed by Certbot

        root /var/www/webhooks.shelex.dev/html;
        index index.html index.htm;

        location / {
                root /var/www/webhooks.shelex.dev/html/;
                index index.html;
                try_files $uri /index.html$is_args$args =404;
        }

        location /api/ {
                proxy_pass http://127.0.0.1:8080/api/;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";
                }

        location /listen/ {
                proxy_pass http://127.0.0.1:8080/listen/;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";
                }

        location /swagger/ {
                #return 302 http://127.0.0.1:8080/swagger/index.html;
                proxy_pass http://127.0.0.1:8080/swagger/;
        }
}
